		<div class="min-h-screen flex flex-col bg-gray-800">
			<div class="container mx-auto py-8">
			  <!-- Search Bar -->
			  <div class="flex justify-end mb-8">
				<div class="w-full sm:w-auto mb-4 sm:mb-">
				  <input type="text" placeholder="Cerca..." class="border border-blue-700 bg-gray-900 rounded px-4 py-2 w-full" id="search-input">
				</div>
			  </div>
		  
